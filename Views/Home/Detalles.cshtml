@model Productos.Models.ModeloProductos

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    @if (Model.imagenes != null)
    {
        @for (int i = 0; i < Model.imagenes.Length; i++)
        {
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-label="Slide @(i+1)"></button>
        }
    }
  </div>
  <div class="carousel-inner">
    @if (Model.imagenes != null)
    {
        for (int i = 0; i < Model.imagenes.Length; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
              <img src="@Model.imagenes[i]" class="d-block mx-auto img-small" alt="..." style="max-width: 200%; max-height: 300px;">
            </div>
        }
    }
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<div class="product-details">
    <h2>@Model.Nombre</h2>
    <p><strong>Marca:</strong> @Model.Marca</p>
    <p><strong>Modelo:</strong> @Model.Modelo</p>
    <p><strong>Precio:</strong> @Model.Precio</p>
    <p><strong>Descripción:</strong> @Model.descripcion</p>
</div>

<div class="back-button">
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Volver al Inicio</a>
</div>

<style>
    /* Estilos para los detalles del producto */
    .product-details {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    /* Estilos para el botón de regreso */
    .back-button {
        margin-top: 20px;
        text-align: center;
    }
</style>
